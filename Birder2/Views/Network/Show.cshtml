@model Birder2.Controllers.NetworkController.UserHomeViewModel

<section>
    <div class="media">
        <div class="media-left media-middle">
            <img src="~/images/man.png" class="media-object">
        </div>
        <div class="media-body">
            <h3 class="media-heading">@Model.UserName</h3>
            @{ var followButtonText = Model.IsFollowing == false ? "Follow" : "Unfollow";
                <div>
                    <div class="form-group"><button class="btn btn-danger btn-xs" >@followButtonText</button></div>
                </div>
             }
        </div>
    </div>
</section>

<h4><b>@Model.UserName</b> has spotted <b>@Model.UniqueSpeciesCount</b> bird species in <b>@Model.Observations.Results.Count()</b> observations:</h4>

@{
    ViewData["Title"] = "My Observations";


    @foreach (var observation in Model.Observations.Results)
    {
        <div class="container">
            @Html.Partial("_Observations", observation)
        </div>
    }
}
<br />

@(await Component.InvokeAsync<PagerViewComponent>(Model.Observations))