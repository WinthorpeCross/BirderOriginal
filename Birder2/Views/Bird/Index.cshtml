@model IEnumerable<Birder2.Models.Bird>

@{
    ViewData["Title"] = "Birds";
    Layout = "~/Views/Shared/_LayoutNoSidebar.cshtml";
    int counter = 0;
}

<h2>British Bird Species</h2>

<form asp-action="Index" method="get">
    <div class="form-actions no-color">
        <p>
            Find by name: <input type="text" name="SearchString" />
            <input type="submit" value="Search" class="btn btn-default" /> |
            <a asp-action="Index">Back to Full List</a>
        </p>
    </div>
</form>


<div class="row">
    @foreach (var item in Model)
    {
        if (counter != 0 && counter % 3 == 0)
        {
        @:</div>
        @:<div class="row">
        }

        <div class="col-md-4">
            <div class="thumbnail">
                <a href="Bird/Details/@item.BirdId" />
                @if (item.ThumbnailUrl != null)
                {
                    <img src="@item.ThumbnailUrl" alt="ASP.NET" class="img-responsive" s />
                }
                else
                {
                    <img src="~/images/if_099374-twitter-bird3_56010.png" alt="ASP.NET" class="img-responsive" />
                }
                <div class="caption">
                    <h3 id="thumbnail-label">@Html.DisplayFor(modelItem => item.EnglishName)</h3>
                    <p><i>@Html.DisplayFor(modelItem => item.Species)</i></p>
                </div>
            </div>
        </div>

        counter++;
    }
</div>
