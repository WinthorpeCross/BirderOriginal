@model BirdIndexViewModel
@{
    ViewData["Title"] = "Birds";
    Layout = "~/Views/Shared/_LayoutNoSidebar.cshtml";
    int counter = 0;
}

<form id="sort-filter-form" class="form-horizontal">
    <div class="form-group">
        <div class="col-sm-3">
            <label class="control-label"></label>
            @Html.DropDownListFor(m => m.SelectedBirdId,
                    new SelectList(Model.AllBirdsDropDownList, "BirdId", "EnglishName"),
                          new
                          {
                              @class = "form-control selectpicker showtick",
                              title = "Choose a bird species...",
                              data_live_search = "true",
                              data_show_subtext = "true",
                              onchange = "this.form.submit()"
                          })
        </div>
        @*<div class="col-sm-3">
            <label class="control-label"></label>
            @{
                var disabledState = (Model.ShowAllBirds) ? "disabled" : "";
                <div>
                    <a asp-action="Index" asp-route-ShowAllBirds="true" class="btn btn-default btn-block @disabledState">Full British Birds List</a>
                </div>
            }
        </div>
        <div class="col-sm-3">
            <label class="control-label"></label>
            @{
                var disabledState1 = (Model.ShowAllBirds) ? "" : "disabled";
                if (Model.SelectedBirdId != 0) { disabledState1 = ""; }
                <div>
                    <a asp-action="Index" asp-route-ShowAllBirds="false" class="btn btn-default btn-block @disabledState1">Common British Birds List</a>
                </div>
            }
        </div>*@
        <div class="col-lg-9">
            <label class="control-label"></label>
            <div>
                <input asp-for="ShowAllBirds" type="checkbox" data-toggle="toggle" onchange="this.form.submit()" data-on="All birds" data-off="Common birds">
                @*<a asp-action="Index" asp-route-ShowAllBirds="true" class="btn btn-default btn-block disabled">Tabular View</a>*@
            </div>
        </div>
    </div>
</form>

<br />

<div class="row">
    @foreach (var item in Model.BirdsList.Results)
    {
        if (counter != 0 && counter % 3 == 0)
        {
            @:</div>
            @:<div class="row">
        }

        <div class="col-md-4">
            <div class="thumbnail">
                <a href="Bird/Details/@item.BirdId" />
                @if (item.ThumbnailUrl != null)
                {
                    <img src="@item.ThumbnailUrl" alt="ASP.NET" class="img-responsive" />
                }
                else
                {
                    <img src="~/images/if_099374-twitter-bird3_56010.png" alt="ASP.NET" class="img-responsive" />
                }
                <div class="caption">
                    <h3 id="thumbnail-label">@Html.DisplayFor(modelItem => item.EnglishName)</h3>
                    <p><i>@Html.DisplayFor(modelItem => item.Species)</i></p>
                </div>
            </div>
        </div>

        counter++;
    }

</div>

<br />

<div>
    @(await Component.InvokeAsync<PagerViewComponent>(Model.BirdsList))
</div>