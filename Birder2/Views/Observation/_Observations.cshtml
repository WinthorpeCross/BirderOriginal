@model Observation

<section>
    <div class="media">
        <div class="media-left media-middle">
            <img src="~/images/if_099374-twitter-bird3_56010.png" class="media-object" style="width:60px">
        </div>
        <div class="media-body">
            <h3 class="media-heading">@Model.Bird.EnglishName <small><i> @Model.Bird.ScientificName</i></small></h3>
            <h5><span class="glyphicon glyphicon-time"></span> Observed on @Html.DisplayFor(modelItem => Model.ObservationDateTime) at @Model.Location</h5>
            <p>@Model.Note</p>
        </div>
    </div>
    <div>
        <p><i>5 photos</i></p>
        <p><i>@Model.Note</i></p>
    </div>
    <div>
        <a asp-action="Edit" asp-route-id="@Model.ObservationId">Edit</a> |
        <a asp-action="Details" asp-route-id="@Model.ObservationId">Details</a> |
        <a asp-action="Delete" asp-route-id="@Model.ObservationId">Delete</a>
    </div>
</section>
