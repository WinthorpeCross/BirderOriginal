                <input asp-for="Observation.Location" type="hidden" class="form-control" id="location" />
                @*<span asp-validation-for="Location" class="text-danger"></span>*@
            </div>
            <div class="form-group">
                @*<label asp-for="LocationLatitude" class="control-label"></label>*@
                <input asp-for="Observation.LocationLatitude" type="hidden" class="form-control" id="latitude" />
                @*<span asp-validation-for="LocationLatitude" class="text-danger"></span>*@
